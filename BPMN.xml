<?xml version="1.0" encoding="UTF-8"?>
<bpmn:definitions 
  xmlns:bpmn="http://www.omg.org/spec/BPMN/20100524/MODEL" 
  xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI" 
  xmlns:dc="http://www.omg.org/spec/DD/20100524/DC" 
  xmlns:di="http://www.omg.org/spec/DD/20100524/DI" 
  id="Definitions_1" 
  targetNamespace="http://bpmn.io/schema/bpmn">
  
  <!-- Процесс: Управление терминологическим корпусом -->
  <bpmn:process id="TermCorpus_Management" isExecutable="false">
    
    <!-- Уровень 1: Главный процесс -->
    <bpmn:startEvent id="StartEvent_1" />
    <bpmn:endEvent id="EndEvent_1" />
    
    <!-- Подпроцесс: Сбор и обработка данных -->
    <bpmn:subProcess id="DataCollection_SubProcess" name="Сбор и обработка данных">
      <bpmn:task id="Task_SearchSources" name="Поиск источников" />
      <bpmn:task id="Task_ExtractTerms" name="Извлечение терминов" />
      <bpmn:task id="Task_CleanData" name="Очистка данных" />
      <bpmn:sequenceFlow id="Flow_1" sourceRef="Task_SearchSources" targetRef="Task_ExtractTerms" />
      <bpmn:sequenceFlow id="Flow_2" sourceRef="Task_ExtractTerms" targetRef="Task_CleanData" />
    </bpmn:subProcess>
    
    <!-- Подпроцесс: Лингвистический анализ -->
    <bpmn:subProcess id="LinguisticAnalysis_SubProcess" name="Лингвистический анализ">
      <bpmn:task id="Task_Tagging" name="Разметка терминов" />
      <bpmn:task id="Task_PairMatching" name="Сопоставление пар" />
      <bpmn:task id="Task_ExpertReview" name="Экспертная проверка" />
      <bpmn:sequenceFlow id="Flow_3" sourceRef="Task_Tagging" targetRef="Task_PairMatching" />
      <bpmn:sequenceFlow id="Flow_4" sourceRef="Task_PairMatching" targetRef="Task_ExpertReview" />
    </bpmn:subProcess>
    
    <!-- Подпроцесс: Публикация и поддержка -->
    <bpmn:subProcess id="Publication_SubProcess" name="Публикация и поддержка">
      <bpmn:task id="Task_DevelopUI" name="Разработка интерфейса" />
      <bpmn:task id="Task_UploadData" name="Загрузка данных" />
      <bpmn:task id="Task_Testing" name="Тестирование" />
      <bpmn:sequenceFlow id="Flow_5" sourceRef="Task_DevelopUI" targetRef="Task_UploadData" />
      <bpmn:sequenceFlow id="Flow_6" sourceRef="Task_UploadData" targetRef="Task_Testing" />
    </bpmn:subProcess>
    
    <!-- Связи между процессами -->
    <bpmn:sequenceFlow id="Flow_StartToData" sourceRef="StartEvent_1" targetRef="DataCollection_SubProcess" />
    <bpmn:sequenceFlow id="Flow_DataToLing" sourceRef="DataCollection_SubProcess" targetRef="LinguisticAnalysis_SubProcess" />
    <bpmn:sequenceFlow id="Flow_LingToPub" sourceRef="LinguisticAnalysis_SubProcess" targetRef="Publication_SubProcess" />
    <bpmn:sequenceFlow id="Flow_PubToEnd" sourceRef="Publication_SubProcess" targetRef="EndEvent_1" />
    
    <!-- Декомпозиция (Уровень 3) -->
    <!-- Пример: Детализация "Извлечение терминов" -->
    <bpmn:subProcess id="TermExtraction_Details" name="Детализация: Извлечение терминов">
      <bpmn:task id="Task_AutoExtract" name="Автоматическое извлечение (NLP)" />
      <bpmn:task id="Task_ManualCheck" name="Ручная коррекция" />
      <bpmn:sequenceFlow id="Flow_7" sourceRef="Task_AutoExtract" targetRef="Task_ManualCheck" />
    </bpmn:subProcess>
    
    <!-- Связь с родительской задачей -->
    <bpmn:association id="Assoc_ExtractTerms" sourceRef="Task_ExtractTerms" targetRef="TermExtraction_Details" />
  </bpmn:process>
  
  <!-- BPMNDiagram (визуальная часть) -->
  <bpmndi:BPMNDiagram id="BPMNDiagram_1">
    <bpmndi:BPMNPlane id="BPMNPlane_1" bpmnElement="TermCorpus_Management">
      <!-- Элементы будут автоматически размещены редактором -->
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
</bpmn:definitions>
